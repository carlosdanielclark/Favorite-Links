
<div class="row">
  <div class="col s12 center_conten">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <form action="/links/add" method="post">

          <div class="input-field section">
            <input type="text" name="title" id="title" class="validate white-text" autofocus>
            <label for="title">Title</label>
          </div>

          <div class="input-field section">
            <input type="url" name="url" id="url" class="validate white-text">
            <label for="url">URL</label>
          </div>

          <div class="input-field section">
            <i class="material-icons prefix">mode_edit</i>
            <textarea type="text"  name="description" id="description" class="materialize-textarea white-text" rows="2"></textarea>
            <label for="description">Description</label>
          </div>

          <div class="section">
            <button class="btn btn_form blue-grey lighten-2 col s12 modal-trigger">Save
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>




